{
  "name": "bridge-mcp-figma",
  "version": "0.0.1",
  "description": "MCP server and plugin for Figma: allows you to work with Figma through the MCP protocol.",
  "main": "code.js",
  "author": "sojotype",
  "repository": {
    "type": "git",
    "url": "https://github.com/sojotype/bridge-mcp-figma"
  },
  "private": true,
  "scripts": {
    "prepare": "lefthook install",
    "build:manifest": "bun scripts/generate-manifest.ts",
    "build:api": "vite build --config plugin-api.vite.config.ts",
    "build:ui": "vite build --config plugin-ui.vite.config.ts",
    "watch:manifest": "bun scripts/watch-manifest.ts",
    "build": "bun run build:api && bun run build:ui && bun run build:manifest",
    "dev": "concurrently \"vite build --watch --config plugin-api.vite.config.ts\" \"vite build --watch --config plugin-ui.vite.config.ts\" \"bun run watch:manifest\""
  },
  "type": "module",
  "license": "MIT",
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@figma/plugin-typings": "*",
    "@types/bun": "latest",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "lefthook": "^2.0.15",
    "lint-staged": "^16.2.7",
    "typescript": "^5.3.2",
    "ultracite": "7.0.11",
    "vite": "npm:rolldown-vite@7.3.1",
    "vite-plugin-singlefile": "^2.3.0",
    "concurrently": "^8.2.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix",
      "bun x ultracite fix"
    ]
  }
}
