{
  "name": "bridge-mcp-figma",
  "version": "0.0.1",
  "description": "MCP server and plugin for Figma: allows you to work with Figma through the MCP protocol.",
  "main": "code.js",
  "author": "sojotype",
  "repository": {
    "type": "git",
    "url": "https://github.com/sojotype/bridge-mcp-figma"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "lefthook install",
    "dev": "turbo run dev",
    "dev:plugin": "turbo run dev --filter=bridge-mcp-figma/plugin",
    "dev:mcp": "turbo run dev --filter=bridge-mcp-figma/mcp-server",
    "build": "turbo run build"
  },
  "type": "module",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/bun": "latest",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "fluid-tailwindcss": "^1.0.5",
    "lefthook": "^2.0.15",
    "lint-staged": "^16.2.7",
    "tailwindcss": "^4",
    "turbo": "^2.8.10",
    "typescript": "^5.9.3",
    "ultracite": "7.0.11"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  }
}
